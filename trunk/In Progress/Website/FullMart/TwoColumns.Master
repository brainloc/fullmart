                        <tr>
                            <th colspan="7">
                                <button id="btnVerify" runat="server" onserverclick="btnVerify_Click">
                                    <%=FullMart.Code.DAO.BindingUltilities.GetResourceValue("verify") %></button>
                            </th>
                        </tr>
                    </tfoot>
                </table>
            </ContentTemplate>
        </asp:UpdatePanel>
